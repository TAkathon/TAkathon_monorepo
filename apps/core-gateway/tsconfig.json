{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@takathon/shared/types": ["../../libs/shared/types/src/index.ts"],
      "@takathon/shared/types/*": ["../../libs/shared/types/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test", "**/*.spec.ts"]
}
